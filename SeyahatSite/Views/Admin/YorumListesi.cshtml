@using SeyahatSite.Models.Sınıflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog No</th>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>
    @foreach (var x in Model)
    {


    <tr>
        <td>@x.Id</td>
        <td>@x.KullanıcıAdı</td>
        <td>@x.Mail</td>
        <td>@x.Yorum</td>
        <td>@x.blog.Baslık</td>
        <td><a href="/Admin/YorumSil/@x.Id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/YorumGetir/@x.Id" class="btn btn-success">Güncelle</a></td>
    </tr>
    }
</table>

