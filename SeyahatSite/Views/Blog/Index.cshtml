@model SeyahatSite.Models.Sınıflar.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Test.cshtml";
}


<!DOCTYPE HTML>
<html>
<head>
    <title>Ben Sivaslıyım</title>
    <link href="~/s/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/s/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->


</head>
<body>
    <div class="single">
        <div class="container">


            <div class="col-md-8 single-main">



                @foreach (var item in Model.deger1)
                {


                    <div class="single-grid">
                        <img src="@item.BlogImage" alt="" style="margin-bottom:20px" />
                        <a href="/Blog/BlogDetay/@item.ID" style="margin-top:10px">@item.Baslık</a>
                        <p>@item.Acıklama</p>

                    </div>
                    <br /><br />
                }


            </div>

            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>Son Yazılar</h3>
                    <ul>
                        @foreach (var item in Model.deger3)
                        {


                            <li><a href="/Blog/BlogDetay/@item.ID">@item.Baslık</a></li>
                        }
                    </ul>
                </div>
                <div class="comments">
                    <h3>Son Yorumlar</h3>
                    <ul>
                        <li><a href="#">Amada Doe </a> on <a href="#">Hello World!</a></li>
                        <li><a href="#">Peter Doe </a> on <a href="#"> Photography</a></li>
                        <li><a href="#">Steve Roberts  </a> on <a href="#">HTML5/CSS3</a></li>
                    </ul>
                </div>

            </div>
            <div class="clearfix"></div>
        </div>
    </div>

</body>
</html>




