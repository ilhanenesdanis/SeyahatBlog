@using SeyahatSite.Models.Sınıflar
@model List<Blog>
<div class="right">
    @foreach (var item in Model)
    {


    <div class="bot-left">
        <img src="@item.BlogImage" alt="" />
    </div>
    <div class="left-text">

        <h4>@item.Baslık</h4>
        <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
        <p>@item.Acıklama.Substring(0,100)</p>
        <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Oku >></span></a></p>
    </div>
    }
</div>